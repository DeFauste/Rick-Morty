<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sh_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sh_text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sh_text_name" />

        <TextView
            android:id="@+id/sh_text_dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dimension: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sh_text_number" />
        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jerry"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/sh_text_name"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="spec"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/sh_text_number"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />
        <TextView
            android:id="@+id/text_dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="live"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/sh_text_dimension"
            app:layout_constraintTop_toBottomOf="@+id/text_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>