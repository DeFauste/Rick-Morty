<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sh_image_char"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_splash_screen"
            app:layout_constraintBottom_toTopOf=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sh_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sh_image_char" />

        <TextView
            android:id="@+id/sh_text_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="species: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sh_text_name" />

        <TextView
            android:id="@+id/sh_text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sh_text_species" />

        <TextView
            android:id="@+id/sh_text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender: "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sh_text_status"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jerry"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/sh_text_name"
            app:layout_constraintTop_toBottomOf="@+id/sh_image_char" />
        <TextView
            android:id="@+id/text_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="spec"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/sh_text_species"
            app:layout_constraintTop_toBottomOf="@+id/text_name" />
        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="live"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@+id/sh_text_status"
            app:layout_constraintTop_toBottomOf="@+id/text_species" />
        <TextView
            android:id="@+id/text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="man"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sh_text_gender"
            app:layout_constraintTop_toBottomOf="@+id/text_status" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>